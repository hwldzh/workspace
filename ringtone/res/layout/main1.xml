<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/light_gray"
   >
    
    <com.example.ringtone.CustomRelativeLayout 
        android:layout_marginTop="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:id="@+id/custom1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/white"
        >
        <ImageButton 
            android:id="@+id/img_play_pause"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/music_play"/>
        <TextView 
            android:id="@+id/ringname"
            android:layout_toRightOf="@+id/img_play_pause"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="铃声名"
            android:textSize="14sp"
            android:textColor="@color/black"/>
        <TextView 
            android:id="@+id/download_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="（未下载）"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_toRightOf="@+id/ringname" />
        <TextView 
            android:layout_marginLeft="18dp"
            android:id="@+id/ring_time_long"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="01:49"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_toRightOf="@+id/download_info" />
        <TextView 
            android:layout_marginLeft="12dp"
            android:id="@+id/ring_file_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="315K"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_toRightOf="@+id/ring_time_long"/>"
        
    </com.example.ringtone.CustomRelativeLayout>
    
    <com.example.ringtone.CustomRelativeLayout 
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/white"
        >
        <TextView 
            android:id="@+id/download_or_setringtone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下载"
            android:layout_centerInParent="true"
            android:textSize="14sp"
            android:textColor="@color/black"/>
        <TextView 
            android:id="@+id/download_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="112.3K/s"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"/>
        
    </com.example.ringtone.CustomRelativeLayout>
    

</LinearLayout>
